<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.milksys.controller.RootLayoutController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Cadastros">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleCadastroAnimal" text="Animal">
							<accelerator>
								<KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroFinalidadeLote" text="Finalidade Lote" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroPrecoLeite" text="Preço Leite" />
						<MenuItem mnemonicParsing="false" onAction="#handleCadastroRaca" text="Raça">
							<accelerator>
								<KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
						<MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Produção">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleCadastroProducaoLeite" text="Produção Leite" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroEntregaLeite" text="Entrega Leite" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastrarProducaoIndividual" text="Produção Individual" />
					</items>
				</Menu>
            <Menu mnemonicParsing="false" text="Reproduçao">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastrarTipoCobertura" text="Tipo Cobertura" />
                  <MenuItem fx:id="handleCadastrarSituacaoCobertura" mnemonicParsing="false" onAction="#handleCadastrarSituacaoCobertura" text="Situaçao Cobertura" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastrarSemen" text="Sêmen" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Propriedade">
              <items>
                  <Menu mnemonicParsing="false" text="Mão de Obra">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#handleCadastrarFuncionario" text="Funcionário" />
                        <MenuItem mnemonicParsing="false" onAction="#handleCadastrarOcorrenciaFuncionario" text="Ocorrência" />
                        <MenuItem mnemonicParsing="false" onAction="#handleCadastrarMotivoOcorrenciaFuncionario" style="-fx-color: CCC;" text="Motivo Ocorrência" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Prestadores de Serviço">
                    <items>
                	  <MenuItem mnemonicParsing="false" onAction="#handleCadastrarServico" text="Serviço" />
                      <MenuItem mnemonicParsing="false" onAction="#handleCadastrarPrestadorServico" text="Prestador Serviço" />
                    </items>
                  </Menu>
                  <SeparatorMenuItem mnemonicParsing="false" />
              </items>
            </Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
