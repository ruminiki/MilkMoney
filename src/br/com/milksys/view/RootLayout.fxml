<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.milksys.controller.RootLayoutController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Cadastros">
				 <items>
				  <MenuItem mnemonicParsing="false" onAction="#handleCadastroAnimal" text="Animal">
					<accelerator>
						<KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
					</accelerator>
			 	  </MenuItem>
			 	  <MenuItem mnemonicParsing="false" onAction="#handleCadastroSituacaoAnimal" text="Situação Animal"/>
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroFinalidadeLote" text="Finalidade Lote"/>
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroPrecoLeite" text="Preço Leite" />
				  <MenuItem mnemonicParsing="false" onAction="#handleCadastroRaca" text="Raça">
						<accelerator>
							<KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
						</accelerator>
				  </MenuItem>
				  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
				</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Produção">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleCadastroProducaoLeite" text="Produção Leite" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroEntregaLeite" text="Entrega Leite" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroProducaoIndividual" text="Produção Individual" />
					</items>
				</Menu>
            <Menu mnemonicParsing="false" text="Reprodução">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroSemen" text="Sêmen" />
                  <MenuItem mnemonicParsing="false" onAction="#handleCadastroCobertura" text="Cobertura" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Propriedade">
              <items>
                  <Menu mnemonicParsing="false" text="Mão de Obra">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#handleCadastroFuncionario" text="Funcionário" />
                        <MenuItem mnemonicParsing="false" onAction="#handleCadastroMotivoOcorrenciaFuncionario" style="-fx-color: CCC;" text="Motivo Ocorrência" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Fornecedores">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#handleCadastroFornecedor" text="Fornecedor" />
                	  <MenuItem mnemonicParsing="false" onAction="#handleCadastroServico" text="Serviço" />
                      <MenuItem mnemonicParsing="false" onAction="#handleCadastroPrestadorServico" text="Prestador Serviço" />
                    </items>
                  </Menu>
                  <SeparatorMenuItem mnemonicParsing="false" />
              </items>
            </Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
